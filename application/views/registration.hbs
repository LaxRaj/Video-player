<body>
    <Section>
        <h1 id="registration_text">Registration <br> Form.</h1>
    </Section>
    <form action="/users/registration"
          method="post"
          enctype="application/x-www-form-urlencoded"
          class="registration_form"
          id="reg_form"
          >

        <label for="uname">Username</label>
        <input type="text" name="username" id="uname" placeholder="Enter Username" required><br>

        <label for="email">Email</label>
        <input type="email" name="email" id="email" placeholder="Enter Email"><br>

        <label for="pword">Password</label>
        <input type="password" name="password" id="pword" placeholder="Enter Password" required><br>

        <label for="cpassword">Confirm Password</label>
        <input type="password" name="cpassword" id="cpassword" placeholder="Confirm Password" required><br>

        <input type="checkbox" name="age" id="age"><label for="age">Confirm that you're 13 and older.</label><br>
        <input type="checkbox" name="TOS" id="tandc"><label for="tandc">Confirm that you've read the <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">terms and conditions.</a></label><br>

        <button type="submit" value="Submit" ></button>
        <div>Already have an account ?  <a href="/login">Log In</a></div>
        
    </form>
        {{!-- <script src="/public/js/validation.js"></script> --}}
</body>
